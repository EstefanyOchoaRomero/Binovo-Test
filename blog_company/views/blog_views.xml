<?xml version="1.0" encoding="UTF-8"?>


<odoo>

    
    <record id="view_blog_form_inherit_company" model="ir.ui.view">
        <field name="name">blog.blog.form.inherit.company</field>
        <field name="model">blog.blog</field>
        <field name="inherit_id" ref="website_blog.view_blog_blog_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="company_id"/>
            </xpath>
        </field>
    </record>


    <record id="view_blog_post_form_inherit_company" model="ir.ui.view">
        <field name="name">blog.post.form.inherit.company</field>
        <field name="model">blog.post</field>
        <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="company_id" readonly="1"/>
            </xpath>
        </field>
    </record>


</odoo>
