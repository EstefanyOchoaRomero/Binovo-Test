<?xml version="1.0" encoding="UTF-8"?>

<odoo>


    <record id="blog_blog_company_rule" model="ir.rule">
        <field name="name">Blogs by company</field>
        <field name="model_id" ref="website_blog.model_blog_blog"/>
        <field name="domain_force">[('company_id','child_of',[user.company_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>

    <record id="blog_post_company_rule" model="ir.rule">
        <field name="name">Blog Posts by company</field>
        <field name="model_id" ref="website_blog.model_blog_post"/>
        <field name="domain_force">[('company_id','child_of',[user.company_id.id])]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
    </record>


</odoo>